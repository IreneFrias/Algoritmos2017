    cout<<"\n\n    [0] Salir ";
	cout<<"\n\t    Seleccione una opcion: ";
	cin>>opc;
    switch(opc)
       {case 1:insertar();
           break;
        case 2:listar();
           break;
        case 3:consultar();
           break;
        case 4:modificar();
           break;
        case 5:borrar();
           break;
	    case 6:clasificar();
		   break;
	    case 0:cout<<"\n Salir";
		   break;
	    default: cout<<"\n ERROR";
		   break;
       }
   }while(opc=!0);

getch();
}


void insertar(int N)
{int N;
 cout<<"\n Ingrese el numero de datos que desea insertar:";
 cin>>N;
 for(int i=0;i<N;i++)
    {cout<<"\n Ingrese el ID: ";
     cin>>V[i].numero;
	 cout<<"\n Ingrese el interes: ";
	 cin.ignore();
	 getline(cin,V[i].interes);
	 cout<<"\n Ingrese la descripcion: ";
	 getline(cin,V[i].descripcion);
    }
 return N;
}


void listar(int N)
{int N;
 cout<<"\n LISTAR";
 cout<<"\n ID"<<"\t";
 cout<<"Intereses"<<"\t";
 cout<<"Descripcion"<<"\t";
 for(int i=0;i<N;i++)
    {cout<<" "<<V[i].numero;
     cout<<" "<<V[i].interes;
	 cout<<" "<<V[i].descripcion;
	 cout<<"\n\n";
    }
}


